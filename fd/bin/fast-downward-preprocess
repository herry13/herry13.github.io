#! /bin/bash

set -e

function get_basedir {
    cd `dirname $0`
    TARGET_FILE=`basename $0`
    while [ -L "$TARGET_FILE" ]
    do
        TARGET_FILE=`readlink $TARGET_FILE`
        cd `dirname $TARGET_FILE`
        TARGET_FILE=`basename $TARGET_FILE`
    done
    PHYS_DIR=`pwd -P`
    echo `dirname "$PHYS_DIR/$TARGET_FILE"`
}

BASEDIR=$(get_basedir)
PREPROCESS="$BASEDIR/../share/preprocess"

$PREPROCESS "$@"
